extends ../layouts/base-sidebar.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Ari Laurel';
    - var index = true;

block content
  .pure-g
    #background
    //.pure-u-1
      img#writingBackground(src="assets/temple.jpg")

    .pure-u-1.left
      .pure-u-1.pure-u-md-7-8.pure-u-lg-3-5
        #writings
          each item, i in journals
            .card
              .pure-u-4-5
                h3.cardTitle= item.journal
                a.journalLink(href=item.link)= item.linkText
                p.cardInfo= item.additionalInfo
    script(src='js/writing.js')


